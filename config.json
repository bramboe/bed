{
  "name": "Smartbed MQTT",
  "version": "1.1.19",
  "slug": "smartbed-mqtt",
  "description": "A Home Assistant add-on to enable controlling smart beds.",
  "url": "https://github.com/bramboe/bed",
  "startup": "application",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "boot": "auto",
  "services": ["mqtt:need"],
  "host_network": true,
  "options": {
    "mqtt_host": "<auto_detect>",
    "mqtt_port": "<auto_detect>",
    "mqtt_user": "<auto_detect>",
    "mqtt_password": "<auto_detect>",
    "type": "sleeptracker",
    "sleeptrackerRefreshFrequency": 1,
    "bleProxies": [
      {
        "host": "bluetooth-proxy.local"
      }
    ],
    "octoDevices": [
      {
        "name": "RC2",
        "friendlyName": "Octo Bed",
        "pin": "1234"
      }
    ]
  },
  "schema": {
    "mqtt_host": "str",
    "mqtt_port": "str",
    "mqtt_user": "str",
    "mqtt_password": "password",
    "type": "list(sleeptracker|ergowifi|richmat|linak|solace|motosleep|reverie|leggettplatt|logicdata|ergomotion|okimat|keeson)",
    "sleeptrackerRefreshFrequency": "int(0,)",
    "ergoWifiCredentials": [
      {
        "email": "email",
        "password": "password",
        "remoteStyle": "list(L|M|H)?"
      }
    ],
    "bleProxies": [
      {
        "host": "str",
        "port": "int(1,65536)?",
        "password": "password?",
        "encryptionKey": "match(^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)$)?",
        "expectedServerName": "str?"
      }
    ],
    "octoDevices": [
      {
        "name": "str",
        "friendlyName": "str",
        "pin": "str?"
      }
    ]
  }
}
